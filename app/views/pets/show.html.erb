

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @pet.photo.key, crop: :fill, gravity: :face if @pet.photo.attached? %>);">
  <div class="container">
    <h1>Meet <%= @pet.name %> </h1>
  </div>
</div>

<ul>
<li>Tipo de pet: <%= @pet.animal_type %></li>
<li>Dono (ID): <%= @pet.user.id %></li>
<li>Idade: <%= @pet.age %></li>
<li>Descrição: <%= @pet.description %></li>
</ul>

<%= link_to "Adotar!", new_pet_adoption_path(pet_id: @pet.id) %>
<%= link_to "Voltar!", root_path %>
<%= link_to "Editar pet! (testes)", edit_pet_path(@pet.id) %>