<div class="container mt-3">
  <div class="container mt-3">
    <div class="banner"
      style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/3628100/pexels-photo-3628100.jpeg?cs=srgb&dl=pexels-eddie-galaxy-3628100.jpg&fm=jpg);">
      <div class="container">
        <p>
          <span id="banner-typed-text"></span>
        </p>
        <h5>If you are a pet lover you are in the right place</h5>
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary"  %>
      </div>
    </div>
  </div>
  <div class="container mt-5">
  <div class="cards">
    <% @pets.each do |pet| %>
      <a href="<%= "/pets/#{pet.id}" %>">
        <div class="card-category"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path pet.photo.key, height: 300, crop: :fill if pet.photo.attached? %>')">
          <%= pet.name %>
        </div>
      </a>
    <% end %>
  </div>
</div>
